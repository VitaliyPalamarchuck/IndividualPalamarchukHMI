<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="170.0" prefWidth="175.0"
            xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.individualproject.RegisterController">

    <VBox alignment="CENTER" spacing="10">
        <Label alignment="CENTER" text="Реєстрація" textAlignment="CENTER">
            <VBox.margin>
                <Insets left="15.0" right="10.0" top="5.0" />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="33.0" />
            </font></Label>
        <TextField promptText="Логін">
            <VBox.margin>
                <Insets left="15.0" right="10.0" />
            </VBox.margin></TextField>
        <PasswordField promptText="Пароль">
            <VBox.margin>
                <Insets left="15.0" right="10.0" />
            </VBox.margin></PasswordField>
        <TextField promptText="Ваше ім'я">
            <VBox.margin>
                <Insets left="15.0" right="10.0" />
            </VBox.margin></TextField>
        <TextField promptText="Введіть ліміт">
            <VBox.margin>
                <Insets left="15.0" right="10.0" />
            </VBox.margin></TextField>
        <Button text="Зареєструвати">
            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="10.0" />
            </VBox.margin></Button>
    </VBox>
</AnchorPane>
