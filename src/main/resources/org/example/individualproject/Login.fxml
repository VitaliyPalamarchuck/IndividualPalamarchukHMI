<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="180.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.individualproject.LoginController">

    <VBox alignment="CENTER" spacing="10">
        <Label alignment="CENTER" text="Вхід" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="10.0" top="5.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="33.0" />
         </font></Label>
        <TextField fx:id="loginField" promptText="Логін">
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="10.0" top="5.0" />
         </VBox.margin></TextField>
        <PasswordField fx:id="passField" promptText="Пароль">
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="10.0" top="5.0" />
         </VBox.margin></PasswordField>
        <Button fx:id="enterAccount" onAction="#enterAccount" text="Увійти">
         <VBox.margin>
            <Insets bottom="10.0" left="15.0" right="10.0" top="5.0" />
         </VBox.margin></Button>
    </VBox>
</AnchorPane>
