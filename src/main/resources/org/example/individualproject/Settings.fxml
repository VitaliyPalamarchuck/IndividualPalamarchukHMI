<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" styleClass="glass-pane" stylesheets="@../../../styles/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.individualproject.SettingsController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" text="Налаштування профілю" />

    <VBox spacing="5">
        <Label style="-fx-text-fill: white; -fx-opacity: 0.7;" text="Ваше ім'я" />
        <TextField fx:id="nameField" promptText="Ім'я" />
    </VBox>

    <VBox spacing="5">
        <Label style="-fx-text-fill: white; -fx-opacity: 0.7;" text="Зміна паролю" />
        <PasswordField fx:id="currentPasswordField" promptText="Поточний пароль" />
        <PasswordField fx:id="newPasswordField" promptText="Новий пароль" />
        <PasswordField fx:id="confirmPasswordField" promptText="Підтвердіть новий пароль" />
    </VBox>

    <Button fx:id="saveButton" onAction="#saveSettings" text="Зберегти зміни" />
</VBox>
