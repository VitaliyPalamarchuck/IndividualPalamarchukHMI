<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="116.0" prefWidth="124.0" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.individualproject.SetLimitController">

    <VBox alignment="CENTER" maxWidth="180.0" spacing="10">
        <Label alignment="CENTER" text="Встановіть новий ліміт" textAlignment="CENTER">
            <VBox.margin>
                <Insets bottom="10.0" left="15.0" right="10.0" top="5.0" />
            </VBox.margin>
            <font>
                <Font name="System Bold" size="13.0" />
            </font></Label>
      <Label text="Ваш поточний ліміт:(Тут писатиме ліміт)" wrapText="true">
         <font>
            <Font name="System Bold" size="9.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" left="15.0" right="20.0" top="5.0" />
         </VBox.margin>
      </Label>
        <TextField promptText="Введіть бажаний ліміт">
            <VBox.margin>
                <Insets left="15.0" right="10.0" top="5.0" />
            </VBox.margin></TextField>
        <Button text="Зберегти">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="10.0" />
            </VBox.margin></Button>
    </VBox>
</AnchorPane>
