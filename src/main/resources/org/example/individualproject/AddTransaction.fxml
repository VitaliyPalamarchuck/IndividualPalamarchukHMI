<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" styleClass="glass-pane" stylesheets="@../../../styles/application.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.individualproject.AddTransactionController">
    <top>
        <Label id="transaction-title" alignment="CENTER" prefHeight="48.0" prefWidth="600.0" text="Додати транзакцію" textAlignment="CENTER" />
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20.0">
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="320.0" spacing="10.0">
                <children>
                    <Label id="transaction-goal-label" alignment="CENTER" contentDisplay="CENTER" text="Введіть ціль транзакції" textAlignment="CENTER" />
                    <TextArea id="transaction-goal-input" fx:id="transactionGoalField" prefHeight="207.0" prefWidth="300.0" promptText="Почніть вводити текст..." wrapText="true" />
                </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="220.0" spacing="15.0">
                <children>
                    <TextField fx:id="amountField" promptText="Сума, грн" />
                    <DatePicker fx:id="datePicker" promptText="Дата" />
                    <ComboBox id="transaction-type" fx:id="transactionTypeBox" prefHeight="34.0" prefWidth="226.0" promptText="Виберіть тип транзакції" />
                    <Button id="add-transaction-btn" fx:id="addTransactionButton" alignment="CENTER" mnemonicParsing="false" prefHeight="26.0" prefWidth="144.0" text="Додати транзакцію" textAlignment="CENTER" />
                    <Button id="close-transaction-btn" fx:id="closeTransactionMenu" alignment="CENTER" mnemonicParsing="false" onAction="#closeWindow" prefHeight="26.0" prefWidth="180.0" text="Згорнути дане меню" textAlignment="CENTER" />
                </children>
            </VBox>
        </HBox>
    </center>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
