<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="500.0" prefWidth="900.0" stylesheets="@../../../styles/application.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.individualproject.MainMenuController">
<children>
      <VBox id="menu-container" maxWidth="200.0" minWidth="180.0" prefHeight="500.0" prefWidth="180.0" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
         <children>
            <AnchorPane id="menu-panel" fx:id="mainPane" maxHeight="220.0" minHeight="220.0" prefHeight="220.0" prefWidth="180.0" styleClass="glass-pane">
               <children>
                  <VBox layoutY="13.0" prefHeight="194.0" prefWidth="173.0" spacing="5" AnchorPane.leftAnchor="-1.0" AnchorPane.rightAnchor="-0.5999999999999659" AnchorPane.topAnchor="13.0">
                     <Label id="menu-title" alignment="CENTER" maxWidth="140.0" prefHeight="25.0" text="Головне Меню" />
                     <Button id="menu-button" fx:id="loginButton" alignment="CENTER" mnemonicParsing="false" onAction="#showLoginMenu" text="Вхід" textAlignment="CENTER" />
                     <Button id="menu-button" fx:id="registerButton" alignment="CENTER" mnemonicParsing="false" onAction="#showRegisterMenu" text="Реєстрація" textAlignment="CENTER" />
                     <Button id="menu-button-secondary" fx:id="deleteButton" alignment="CENTER" maxHeight="28.0" mnemonicParsing="false" onAction="#showDeleteMenu" prefHeight="28.0" prefWidth="132.0" text="Видалити користувача" textAlignment="CENTER" wrapText="true" />
                     <Button id="menu-button-secondary" fx:id="exitButton" alignment="CENTER" mnemonicParsing="false" onAction="#closeProgram" text="Завершити роботу" textAlignment="CENTER" wrapText="true" />
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </AnchorPane>
            <StackPane id="content-panel" fx:id="contentPane" minHeight="220.0" prefWidth="180.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </StackPane>
         </children>
      </VBox>
      <AnchorPane id="news-panel" minWidth="500.0" prefHeight="500.0" prefWidth="686.0" HBox.hgrow="ALWAYS">
         <children>
            <VBox id="welcome-panel" spacing="15.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="52.0" AnchorPane.rightAnchor="52.0" AnchorPane.topAnchor="50.0">
               <children>
                  <Label id="welcome-title" text="Ласкаво просимо до FinanceManager!" wrapText="true" />
                  <Label id="welcome-subtitle" text="Ваш персональний помічник для управління фінансами." wrapText="true" />
                  <VBox spacing="10.0">
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                     <children>
                        <Label styleClass="feature-label" text="•  Відстежуйте доходи та витрати: легко додавайте транзакції та контролюйте кожну гривню." wrapText="true" />
                        <Label styleClass="feature-label" text="•  Керуйте балансом: завжди знайте, скільки у вас є коштів в реальному часі." wrapText="true" />
                        <Label styleClass="feature-label" text="•  Аналізуйте звіти: отримуйте детальні таблиці ваших фінансових операцій." wrapText="true" />
                        <Label styleClass="feature-label" text="•  Захищайте дані: використовуйте секретне слово для безпечного видалення акаунту." wrapText="true" />
                     </children>
                  </VBox>
                  <Label id="welcome-cta" text="Увійдіть або зареєструйтесь, щоб почати." />
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets left="10.0" right="5.0" />
         </HBox.margin>
      </AnchorPane>
   </children>
</HBox>
