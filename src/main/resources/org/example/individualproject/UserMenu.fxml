                  <Button fx:id="backToMainMenu" alignment="CENTER" layoutX="40.0" layoutY="168.0" mnemonicParsing="false" onAction="#backToMainMenu" prefWidth="140.0" text="Назад в головне меню" textAlignment="CENTER" wrapText="true" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
               </children>
            </AnchorPane>
            <AnchorPane fx:id="contentPaneUser" minHeight="250.0" minWidth="220.0" prefHeight="250.0" prefWidth="220.0" />
         </children>
        </VBox>
        <AnchorPane minWidth="500.0" prefHeight="500.0" prefWidth="686.0" HBox.hgrow="ALWAYS">

        </AnchorPane>
    </children>
</HBox>
