        <VBox maxWidth="300.0" minWidth="220.0" prefHeight="240.0" prefWidth="220.0" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <AnchorPane fx:id="buttonPaneUSer" minHeight="250.0" minWidth="220.0" prefHeight="250.0" prefWidth="220.0">
               <children>
                  <Label alignment="CENTER" layoutX="-1.0" layoutY="14.0" prefHeight="27.0" prefWidth="221.0" text="Вітаю (імя користувача)!" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <Button fx:id="addTransaction" alignment="CENTER" layoutX="41.0" layoutY="66.0" mnemonicParsing="false" prefWidth="140.0" text="Додати транзакцію" textAlignment="CENTER" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
                  <Button fx:id="reportCreateButton" alignment="CENTER" layoutX="41.0" layoutY="100.0" mnemonicParsing="false" onAction="#createReport" prefWidth="140.0" text="Сформувати звіт" textAlignment="CENTER" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
