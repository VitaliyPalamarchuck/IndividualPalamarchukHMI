<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="500.0" maxWidth="900.0" prefHeight="500.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.individualproject.UserMenuController">
    <VBox id="menu-container" maxWidth="300.0" minWidth="220.0" prefHeight="240.0" prefWidth="220.0" spacing="10.0">
        <AnchorPane fx:id="buttonPaneUSer" id="button-panel" minHeight="250.0" minWidth="220.0">
            <Label id="welcome-title" alignment="CENTER" text="Вітаю (імя користувача)!"
                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />

            <VBox id="button-box" spacing="5.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0"
                  AnchorPane.topAnchor="66.0">
                <Button fx:id="addTransaction" id="menu-button"
                        onAction="#openTransactionAndReportWindow"
                        text="Додати транзакцію" />

                <Button fx:id="reportCreateButton" id="menu-button"
                        onAction="#openReportWindow"
                        text="Сформувати звіт" />

                <Button fx:id="setLimitButton" id="menu-button"
                        onAction="#setLimit"
                        text="Встановити ліміт" />

                <Button fx:id="backToMainMenu" id="menu-button-secondary"
                        onAction="#backToMainMenu"
                        text="Назад в головне меню" />
            </VBox>
        </AnchorPane>
        <AnchorPane fx:id="contentPaneUser" id="content-panel" minHeight="250.0" minWidth="220.0" />
    </VBox>
    <AnchorPane fx:id="ReportAndTransactionPane" id="main-content"
                minWidth="500.0" prefHeight="500.0" prefWidth="686.0" />
</HBox>
